{
  "diagnostic.refreshAfterSave": true,
  "diagnostic.displayByAle": true,
  "coc.preferences.formatOnSaveFiletypes": ["rust"],
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".git/",
        ".hg/"
      ],
      "disableWorkspaceFolders": true,
      "filetypes": [
        "go"
      ]
    }
  }
}
